{
  "index_patterns": "bro-network*",
  "mappings": {
    "network": {
      "properties": {
        "@meta": {
          "properties": {
            "geoip_orig": {
              "properties": {
                "ip": {
                  "type": "ip"
                },
                "location": {
                  "type": "geo_point"
                }
              }
            },
            "geoip_resp": {
              "properties": {
                "ip": {
                  "type": "ip"
                },
                "location": {
                  "type": "geo_point"
                }
              }
            },
            "orig_host": {
              "type": "ip"
            },
            "resp_host": {
              "type": "ip"
            }
          }
        },
        "dhcp": {
          "properties": {
            "assigned_ip": {
              "type": "ip"
            }
          }
        },
        "domain": {
          "dynamic": "true",
          "properties": {
            "name": {
              "type": "text",
              "fields": {
                "raw": {
                  "type": "keyword"
                }
              }
            }
          }
        },
        "dns": {
          "properties": {
            "query": {
              "type": "keyword",
              "copy_to": "domain.name"
            }
          }
        },
        "http": {
          "properties": {
            "user_agent": {
              "type": "text",
              "fields": {
                "keyword": {
                  "type": "keyword",
                  "ignore_above": 256
                }
              }
            },
            "host": {
              "type": "keyword",
              "copy_to": "domain.name"
            }
          }
        },
        "smtp": {
          "properties": {
            "user_agent": {
              "type": "text",
              "fields": {
                "keyword": {
                  "type": "keyword",
                  "ignore_above": 256
                }
              }
            }
          }
        },
        "ssl": {
          "properties": {
            "server_name": {
              "type": "keyword",
              "copy_to": "domain.name"
            }
          }
        },
        "syslog": {
          "properties": {
            "message": {
              "type": "text",
              "fields": {
                "keyword": {
                  "type": "keyword",
                  "ignore_above": 256
                }
              }
            }
          }
        },
        "sip": {
          "properties": {
            "user_agent": {
              "type": "text",
              "fields": {
                "keyword": {
                  "type": "keyword",
                  "ignore_above": 256
                }
              }
            }
          }
        }
      }
    }
  }
}
