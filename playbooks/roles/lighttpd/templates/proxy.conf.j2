# Kibana forward
$HTTP["url"] =~ "^/kibana" {
  # this is a test, not sure if it works
  url.rewrite-once = ("^/kibana(.*)" => "/$1")
  proxy.server = ( "" => ((
    "host" => "kibana", "port" => "{{ kibana_port }}"
  )))
}

