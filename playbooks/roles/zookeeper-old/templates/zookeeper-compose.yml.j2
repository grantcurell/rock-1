---

version: '2'
services:
  zookeeper:
    image: {{ zookeeper_container }}:{{ zookeeper_ver }}
    container_name: {{ zookeeper_container_name }}
    ports:
      - {{ zookeeper_port }}:{{ zookeeper_port }}
    volumes:
      - {{ zookeeper_data_dir }}:/data
      - {{ zookeeper_dir }}/zoo.cfg:/conf/zoo.cfg
      - {{ zookeeper_log_dir }}:{{ zookeeper_log_dir }}

    networks:
      - rocknsm_inside
      - rocknsm_outside

networks:
  rocknsm_inside:
    external: true
  rocknsm_outside:
    external: true

...
